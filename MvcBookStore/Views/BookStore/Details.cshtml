@using MvcBookStore.Models
@model SACH
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>THÔNG TIN CHI TIẾT SÁCH</h2>
<br />
<div class="row">
    <div class="offset-md-1 col-md-4">
        <img style="width:100%" src="~/Images//@Model.HinhMinhHoa" alt="Hinh minh hoa"/>
    </div>
    <div class="col-md-6 details">
        <h3>
            Tên sách: @Model.TenSach
        </h3>
        <p style="text-align: justify">
            <span style="font-weight:bold">Mô tả: </span> @Model.MoTa
        </p>
        <p>
            Giá bán: <span style="color:red; font-size: 32px">@Model.DonGia VNĐ</span>
        </p>
    </div>
</div>
